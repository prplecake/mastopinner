{
	"manifest_version": 2,
	"name": "MastoPinner",
	"version": "0.3.0",
	"description": "",
	"homepage_url": "https://github.com/prplecake/mastopinner",
	"applications": {
		"gecko": {
			"id": "mastopinner@jrgnsn.net",
			"strict_min_version": "57.0"
		}
	},
	"options_ui": {
		"page": "options.html"
	},
	"permissions": [
		"tabs",
		"storage",
		"https://*/*"
	],
	"optional_permissions": [
		"notifications"
	],
	"content_scripts": [
		{
			"matches": [ "https://*/*" ],
			"js": [ "js/bootstrap.js" ],
			"run_at": "document_end",
			"all_frames": false
		}
	],
	"background": {
		"scripts": [
			"js/lib/promisified_chrome.js",
			"js/lib/pinboard_credentials.js",
			"js/lib/pinboard_api.js",
			"js/background.js"
		],
		"persistent": true
	}
}